<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HUEVID Art Gallery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HUEVID_ArtGalleryForColorblind.styles.css" asp-append-version="true" />
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', 'Helvetica Neue', Arial, 'Liberation Sans', sans-serif;
        }
        .navbar-vaso {
            background: #fff;
            border-bottom: 1px solid #eee;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
        .navbar-brand {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 2px;
            margin: 0 auto;
        }
        .navbar-nav {
            margin: 0 auto;
            gap: 2rem;
        }
        .nav-link {
            font-size: 1.1rem;
            color: #222 !important;
            font-weight: 300;
            transition: color 0.2s;
        }
        .nav-link:hover {
            color: #6c757d !important;
        }
        .footer-vaso {
            background: #fff;
            border-top: 1px solid #eee;
            font-size: 0.95rem;
            padding: 2rem 0;
            color: #888;
        }
        @@media (max-width: 768px) {
            .navbar-nav {
                gap: 1rem;
            }
            .navbar-brand {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-vaso">
            <div class="container">
                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    HUEVID
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#vasoNavbar" aria-controls="vasoNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="vasoNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
            
        </nav>
        <!-- Colorblind Filter Dropdown -->
        <div class="container my-3">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <select id="colorblindFilter" class="form-select form-select-sm" aria-label="Colorblind Filter">
                        <option value="">Normal Vision</option>
                        <option value="protanopia">Protanopia</option>
                        <option value="deuteranopia">Deuteranopia</option>
                        <option value="tritanopia">Tritanopia</option>
                        <option value="achromatopsia">Achromatopsia</option>
                    </select>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-vaso text-center">
        <div class="container">
            &copy; 2025 HUEVID Art Gallery &mdash; <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- SVG Filters for Colorblind Simulation -->
    <svg class="colorblind-svg-filters">
        <filter id="protanopia">
            <feColorMatrix type="matrix" values="0.567,0.433,0,0,0 0.558,0.442,0,0,0 0,0.242,0.758,0,0 0,0,0,1,0" />
        </filter>
        <filter id="deuteranopia">
            <feColorMatrix type="matrix" values="0.625,0.375,0,0,0 0.7,0.3,0,0,0 0,0.3,0.7,0,0 0,0,0,1,0" />
        </filter>
        <filter id="tritanopia">
            <feColorMatrix type="matrix" values="0.95,0.05,0,0,0 0,0.433,0.567,0,0 0,0.475,0.525,0,0 0,0,0,1,0" />
        </filter>
    </svg>
</body>
</html>